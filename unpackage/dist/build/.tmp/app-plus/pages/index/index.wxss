.home-page .swiper {
  height: 300rpx;
  margin-top: 10rpx;
}
.home-page .swiper .swiper-item {
  display: block;
  height: 300rpx;
  line-height: 300rpx;
  text-align: center;
}
.home-page .swiper .swiper-item image {
  width: 100%;
  height: 290rpx;
  border-radius: 10rpx;
}
.navigation {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  margin-top: 20rpx;
  -webkit-justify-content: space-around;
      -ms-flex-pack: distribute;
          justify-content: space-around;
}
.navigation .car-type,
.navigation .camera,
.navigation .new-car,
.navigation .trophy {
  text-align: center;
}
.navigation .car-type image,
.navigation .camera image,
.navigation .new-car image,
.navigation .trophy image {
  width: 64rpx;
  height: 64rpx;
}
.gray-line {
  width: 750rpx;
  height: 10rpx;
  background-color: #f2f2f2;
  margin-top: 20rpx;
}
.news-list {
  width: 710rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  margin: 0 20rpx;
  padding: 35rpx 0;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  border-bottom: 2rpx solid #f2f2f2;
}
.news-list .news-list-content {
  width: 80%;
  height: 100%;
}
.news-list .news-list-content .news-list-title {
  font-size: 16px;
  color: #333;
}
.news-list .news-list-content .author {
  color: #b6b6b6;
}
.news-list .news-list-pic {
  width: 200rpx;
  height: 100rpx;
  margin-left: 10rpx;
}
.news-list .news-list-pic image {
  width: 200rpx;
  height: 100rpx;
  vertical-align: middle;
}
.news-list .news-list-video {
  width: 200rpx;
  height: 100rpx;
  margin-left: 10rpx;
}
.news-list .news-list-video video {
  width: 200rpx;
  height: 100rpx;
}

